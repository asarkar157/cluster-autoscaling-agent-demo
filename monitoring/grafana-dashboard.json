  "panels": [
    {
      "title": "Node CPU Utilization %",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "legendFormat": "{{ instance }}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 60 },
              { "color": "red", "value": 80 }
            ]
          }
        }
      }
    },
    {
      "title": "Node Memory Utilization %",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
          "legendFormat": "{{ instance }}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 60 },
              { "color": "red", "value": 80 }
            ]
          }
        }
      }
    },
    {
      "title": "Total Pods by Status",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 8 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "count(kube_pod_info{namespace=\"demo\"})",
          "legendFormat": "Total Pods"
        }
      ]
    },
    {
      "title": "Pending Pods",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 8 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "count(kube_pod_status_phase{namespace=\"demo\", phase=\"Pending\"}) or vector(0)",
          "legendFormat": "Pending"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1 }
            ]
          }
        }
      }
    },
    {
      "title": "Node Count",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 8 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "count(kube_node_info)",
          "legendFormat": "Nodes"
        }
      ]
    },
    {
      "title": "Node Ready Status",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 8 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(kube_node_status_condition{condition=\"Ready\", status=\"true\"})",
          "legendFormat": "Ready"
        }
      ]
    },
    {
      "title": "CPU Requests vs Allocatable",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(kube_pod_container_resource_requests{resource=\"cpu\", namespace=\"demo\"})",
          "legendFormat": "CPU Requests (demo)"
        },
        {
          "expr": "sum(kube_node_status_allocatable{resource=\"cpu\"})",
          "legendFormat": "Allocatable CPU"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      }
    },
    {
      "title": "Memory Requests vs Allocatable",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(kube_pod_container_resource_requests{resource=\"memory\", namespace=\"demo\"})",
          "legendFormat": "Memory Requests (demo)"
        },
        {
          "expr": "sum(kube_node_status_allocatable{resource=\"memory\"})",
          "legendFormat": "Allocatable Memory"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        }
      }
    },
    {
      "title": "Pods per Node",
      "type": "bargauge",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 20 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "count by (node) (kube_pod_info{namespace=\"demo\"})",
          "legendFormat": "{{ node }}"
        }
      ]
    }
  ],
